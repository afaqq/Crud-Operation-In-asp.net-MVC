@model serverside.Models.Student
@{ 
    ViewData["Title"] = "Add Student";
}
<div class="container">
    <div class="row">
        <div class="col-6 offset-3">
            <div class="card">
                <div class="card-header">
                    <h1 class="text-center text-primary">Add Student </h1>
                    <p class="text-center text-danger">@TempData["message"]</p>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="Create">
                        <div class="form-group">
                            <label asp-for="UserName"></label>
                            <input type="text" asp-for=" UserName" class="form-control"
                                   placeholder="Enter Student UserName" />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Name"></label>
                            <input type="text" asp-for=" Name" class="form-control"
                                   placeholder="Enter Student Name" />
                            <span asp-validation-for="Name" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="City"></label>
                            <input type="text" asp-for=" City" class="form-control"
                                   placeholder="Enter Student City" />
                        </div>
                        <div class="form-group">
                            <label asp-for="State"></label>
                            <input type="text" asp-for=" State" class="form-control"
                                   placeholder="Enter Student State" />
                        </div>
                        <div class="form-group">
                            <label asp-for="Salary"></label>
                            <input type="text" asp-for=" Salary" class="form-control"
                                   placeholder="Enter Student Salary" />
                            <span asp-validation-for="Salary" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Submit" class="btn btn-sm btn-outline-success float-right" />

                        </div>
                    </form>

                </div>
            </div>
        </div>

    </div>

</div>